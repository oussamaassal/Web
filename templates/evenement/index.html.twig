<!DOCTYPE html>

<title>Evenement index</title>

{% block body %}
    <h1>Evenement index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Ide</th>
                <th>Nome</th>
                <th>Datee</th>
                <th>Postee</th>
                <th>Periodep</th>
                <th>Imgepath</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for evenement in evenements %}
            <tr>
                <td>{{ evenement.ide }}</td>
                <td>{{ evenement.nome }}</td>
                <td>{{ evenement.datee ? evenement.datee|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ evenement.postee }}</td>
                <td>{{ evenement.periodep }}</td>
                <td>{{ evenement.imgepath }}</td>
                <td>
                    <a href="{{ path('app_evenement_show', {'ide': evenement.ide}) }}">show</a>
                    <a href="{{ path('app_evenement_edit', {'ide': evenement.ide}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_evenement_new') }}">Create new</a>
{% endblock %}
