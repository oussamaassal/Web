{% extends '/admin/base.html.twig' %}

{% block body %}
    <div class="content-body">
        <div class="container-fluid">

            <div class="col-xl-6 col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Modifier categorie</h4>
                    </div>
                    <div class="card-body">
                        <div class="basic-form">
                            {{ form_start(c) }}
                            <div class="mb-3 row">
                                <label class="col-sm-3 col-form-label">Nom</label>
                                <div class="col-sm-9">
                                    {{ form_widget(c.titre,{'attr':{'class':'form-control'}}) }}                            </div>
                            </div>
                            <div class="mb-3 row">
                                <label class="col-sm-3 col-form-label">Description</label>
                                <div class="col-sm-9">
                                    {{ form_widget(c.description,{'attr':{'class':'form-control'}}) }}
                                </div>
                            </div>



                            <div class="mb-3 row">
                                <div class="col-sm-10">
                                    {{ form_widget(c.ajouter,{'attr':{'class':'btn btn-primary'}}) }}                            </div>
                            </div>
                            {{ form_end(c) }}
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>

{% endblock %}
