{% extends '/admin/base.html.twig' %}

{% block body %}
    <div class="content-body">
        <div class="container-fluid">

            <!--***************************start**********************
      *******************************************************-->
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h4 class="card-title">Liste categories</h4>
                            <div class="mb-4">
                                <a href="/category/newCat" class="btn btn-outline-success btn-rounded fs-16">Ajouter categorie</a>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table id="example3" class="display" style="min-width: 845px">
                                    <thead>
                                    <tr>
                                        <th>Titre</th>
                                        <th>Description</th>
                                        <th>Actions</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for categorie in c %}
                                        <tr>
                                            <td>{{ categorie.titre }}</td>
                                            <td>{{ categorie.description }}</td>
                                            <td>
                                                <div class="d-flex">
                                                    <a href="{{ path('modifCateg',{'id':categorie.id}) }}" class="btn btn-primary shadow btn-xs sharp me-1"><i class="fas fa-pencil-alt"></i></a>
                                                    <a href="{{ path('deleteCateg',{'id':categorie.id}) }}" class="btn btn-danger shadow btn-xs sharp"><i class="fa fa-trash"></i></a>
                                                </div>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!--******************************************************
        *******************************end*********************-->
    </div>
{% endblock %}
