{% extends '/admin/base.html.twig' %}

{% block body %}
    <title>Delete Rencontre</title>
    <h1>Delete Rencontre</h1>

    <div class="content-body">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h4 class="card-title">Delete Rencontre</h4>
                        </div>
                        <div class="card-body">
                            <form method="post" action="{{ path('app_rencontre_delete', {'idrencontre': rencontre.idrencontre}) }}" onsubmit="return confirm('Are you sure you want to delete this rencontre');">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ rencontre.idrencontre) }}">
                                <button class="btn btn-danger">Delete</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <a href="{{ path('app_rencontre_index') }}" class="btn btn-secondary">Back to List</a>
{% endblock %}
