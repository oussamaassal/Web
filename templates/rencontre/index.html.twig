{% extends '/admin/base.html.twig' %}


{% block body %}
<title> {% block title %} Hello Controller! {% endblock %}</title>
  <div class="content-body">
			<div class="container-fluid">

        <div class="row page-titles">
					<ol class="breadcrumb">
						<li class="breadcrumb-item active"><a href="javascript:void(0)">Table</a></li>
						<li class="breadcrumb-item"><a href="javascript:void(0)">Datatable</a></li>
					</ol>
                </div>
                 

    <table class="table">
        <thead>
            <tr>
                <th>Idrencontre</th>
                <th>Daterebcontre</th>
                <th>Adversaire</th>
                <th>Score</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for rencontre in rencontres %}
            <tr>
                <td>{{ rencontre.idrencontre }}</td>
                <td>{{ rencontre.daterebcontre ? rencontre.daterebcontre|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ rencontre.adversaire }}</td>
                <td>{{ rencontre.score }}</td>
                <td>
                    <a href="{{ path('app_rencontre_edit', {'idrencontre': rencontre.getIdrencontre}) }}" class="btn btn-primary shadow btn-xs sharp me-1"><i class="fas fa-pencil-alt"></i></a>
                    <a href="{{ path('app_rencontre_delete', {'idrencontre': rencontre.getIdrencontre}) }}" class="btn btn-danger shadow btn-xs sharp"><i class="fa fa-trash"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_rencontre_new') }}">Create new</a>
{% endblock %}
