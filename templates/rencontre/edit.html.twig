{% extends '/admin/base.html.twig' %}

{% block body %}
    <title> {% block title %} Edit Rencontre  {% endblock %}</title>
    <center><h1>Edit Rencontre</h1>
    <div class="content-body">
    <div class="container-fluid">
        <div class="row page-titles">
            <ol class="breadcrumb">
                <li class="breadcrumb-item active"><a href="javascript:void(0)">Rencontre</a></li>
                <li class="breadcrumb-item"><a href="javascript:void(0)">Modifier</a></li>
            </ol>
        </div>

    <div class="row" style="display: flex;align-items: center;justify-content: center;margin-top: 20px; padding: 10px;">
            <div class="col-xl-6 col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Modifier Rencontre</h4>
                        <a href="{{ path('app_rencontre_index') }}" class="btn btn-outline-success btn-rounded fs-16">+ Voir les Rencontre </a>
                    </div>
                    <div class="card-body">
                        <div class="basic-form">
                            {{ form_start(f) }}
                            <div class="row">
                                <div class="mb-3 col-md-6">
                                    {{ form_row(f.adversaire, {'attr': {'class': 'form-control'}}) }}
                                </div>
                                <div class="mb-3 col-md-6">
                                    {{ form_row(f.score, {'attr': {'class': 'form-control'}}) }}
                                </div>
                                <div class="mb-3 col-md-6">
                                    {{ form_row(f.daterebcontre, {'attr': {'class': 'form-control'}}) }}
                            </div>
                            <div class="row">
                                <div class="mb-3 col-md-9">
                                </div>
                                <div class="mb-3 col-md-3">
                                    {{ form_row(f.submit) }}
                                </div>
                            </div>
                            {{ form_end(f) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>
    {{ include('rencontre/_delete_form.html.twig') }}
{% endblock %}
