{% extends '/admin/base.html.twig' %}

{% block body %}
    <div class="content-body">
        <div class="container-fluid">

            <!--***************************start**********************
      *******************************************************-->
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h4 class="card-title">Liste Terrains</h4>
                            <div class="mb-4">
                                <a href="/addTerrain" class="btn btn-outline-success btn-rounded fs-16">+ Nouveau terrain</a>

                            </div>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table id="example3" class="display" style="min-width: 845px">
                                    <thead>
                                    <tr>
                                        <th>nom terrain</th>
                                        <th>adresse</th>
                                        <th>description</th>
                                        <th>geo_x</th>
                                        <th>geo_y</th>
                                        <th>ouverture</th>
                                        <th>fermeture</th>

                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for terrain in b %}
                                    <tr>
                                        <td>{{ terrain.NomTerrain }}</td>
                                        <td>{{ terrain.Adresse }}</td>
                                        <td>{{ terrain.Description }}</td>
                                        <td>{{ terrain.GeoX }}</td>
                                        <td>{{ terrain.GeoY }}</td>
                                        <td>{{ terrain.Ouverture|date('Y-m-d H:i:s') }}</td>
                                        <td>{{ terrain.Fermeture|date('Y-m-d H:i:s') }}</td>
                                        <td>
                                            <div class="d-flex">
                                                <a href="{{ path('modifTerrain',{'id':terrain.id}) }}" class="btn btn-primary shadow btn-xs sharp me-1"><i class="fas fa-pencil-alt"></i></a>
                                                <a href="{{ path('deleteTerrain',{'id':terrain.id}) }}" class="btn btn-danger shadow btn-xs sharp"><i class="fa fa-trash"></i></a>
                                            </div>
                                        </td>
                                        {% endfor %}
                                    </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!--******************************************************
        *******************************end*********************-->
    </div>
    </div>
{% endblock %}
