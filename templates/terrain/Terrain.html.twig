{% extends '/front/base.html.twig' %}

{% block body %}
    <title> {% block title %} Hello Controller! {% endblock %}</title>
    <!-- Section Breadcrumbs-->
    <section class="section parallax-container breadcrumbs-wrap" data-parallax-img="images/bg-breadcrumbs-1-1920x726.jpg">
        <div class="parallax-content breadcrumbs-custom context-dark">
            <div class="container">
                <h3 class="breadcrumbs-custom-title">Terrains</h3>
                <ul class="breadcrumbs-custom-path">
                    <li><a href="index.html">Home</a></li>
                    <li class="active">Terrains</li>
                </ul>
            </div>
        </div>
    </section>
    <section class="section section-sm bg-gray-100">
        <div class="container">


            <!-- Heading Component-->
            <article class="heading-component">
                <div class="heading-component-inner">
                    <h5 class="heading-component-title">Liste Terrains</h5>
                </div>
            </article>

            <div class="row row-30">
                {% for terrain in b %}

                    <div class="col-sm-6 col-lg-4">
                        <!-- Player Info Modern-->
                        <div class="player-info-modern">
                            <a class="player-info-modern-figure" >
                                <img src="https://w7.pngwing.com/pngs/63/401/png-transparent-olympic-football-stadium-stadium-playground-olympic-games.png" alt="" width="368" height="286">
                            </a>
                            <div class="player-info-modern-footer">

                                <div class="player-info-modern-content">
                                    <div class="player-info-modern-title">
                                        <h5><a href="player-page.html">{{ terrain.getNomTerrain() }}</a></h5>

                                    </div>
                                    <div class="player-info-modern-progress">
                                        <!-- Linear progress bar-->
                                        <article class="progress-linear progress-bar-modern">
                                            <div class="progress-header">
                                                <p>Ouverture : {{ terrain.ouverture|date('Y-m-d H:i:s') }} </p>
                                            </div>
                                        </article>
                                        <!-- Linear progress bar-->
                                        <article class="progress-linear progress-bar-modern">
                                            <div class="progress-header">
                                                <p>Fermeture : {{ terrain.fermeture|date('Y-m-d H:i:s') }} </p>
                                            </div>
                                        </article>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                {% endfor %}

            </div>
        </div>
    </section>

{% endblock %}
